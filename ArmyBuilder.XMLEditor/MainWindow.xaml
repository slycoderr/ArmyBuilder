<controls:MetroWindow x:Class="ArmyBuilder.XMLEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArmyBuilder.XMLEditor"
        xmlns:views="clr-namespace:ArmyBuilder.XMLEditor.Views"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d" DataContext="{StaticResource MainViewModel}"
        Title="{Binding SelectedArmy.Name}" Height="800" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <views:EditEquipmentDefinitionsView/>
        <views:EditUnitEntryView Grid.Column="1"/>
        <views:EditUnitView Grid.Column="2"/>
        <views:EditUnitEquipmentView Grid.Column="3"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <ComboBox Width="200" ItemsSource="{Binding ArmyBuilderCore.Armies}" SelectedItem="{Binding SelectedArmy}"/>
            <Button Content="Save ArmyData" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</controls:MetroWindow>

