        <StackPanel DataContext="{Binding CurrentArmyListViewModel, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" x:Name="HeaderPanel" Grid.Row="0" Grid.Column="1" Visibility="{Binding TargetNullValue=Collapsed, FallbackValue=Visible, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}">
            <TextBlock FontSize="38" Text="{Binding ArmyList.Name, FallbackValue=ListName, Mode=OneWay}" Margin="10" />
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding PointsRemaining, FallbackValue=500}" FontSize="18" Margin="10,0,0,10" Foreground="{StaticResource DimText}" />
                <TextBlock Text="of" FontSize="18" Margin="10,0,10,10" Foreground="{StaticResource DimText}" />
                <TextBlock Text="{Binding ArmyList.PointsLimit, FallbackValue=1200}" FontSize="18" Margin="0,0,0,10" Foreground="{StaticResource DimText}" />
                <TextBlock Text="Points Left" FontSize="18" Margin="10,0,0,10" Foreground="{StaticResource DimText}" />
            </StackPanel>
        </StackPanel>

        <dxg:GridControl Visibility="{Binding CurrentArmyListViewModel, TargetNullValue=Collapsed, FallbackValue=Visible, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" x:Name="UnitListView" Grid.Row="2" Grid.Column="1" SelectedItem="{Binding CurrentArmyListViewModel.SelectedUnit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding CurrentArmyListViewModel.Units, Mode=OneWay}" SelectionMode="Row">
            <dxg:GridControl.Columns>
                <dxg:GridColumn FieldName="PointsTotal" />
                <dxg:GridColumn FieldName="UnitEntry.Name" />
                <dxg:GridColumn FieldName="Column" />
            </dxg:GridControl.Columns>
            <dxg:GridControl.View>
                <dxg:TableView ShowGroupPanel="False" />
            </dxg:GridControl.View>
        </dxg:GridControl>

        <Grid Grid.Column="2" Grid.Row="1" Visibility="{Binding Mode=OneWay, TargetNullValue=Collapsed, FallbackValue=Visible, UpdateSourceTrigger=PropertyChanged}"  DataContext="{Binding CurrentArmyListViewModel, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
            <views1:UnitEditor x:Name="UnitEditor" Visibility="{Binding Mode=OneWay, TargetNullValue=Collapsed, FallbackValue=Visible, UpdateSourceTrigger=PropertyChanged}" DataContext="{Binding SelectedUnit, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Margin="5,10,10,0" />
        </Grid>
        
        <Expander Visibility="{Binding CurrentArmyListViewModel, TargetNullValue=Collapsed, FallbackValue=Visible, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" Grid.Row="1" Grid.Column="1" Header="Add UnitEntry" >
            <dxn:NavBarControl AllowSelectItem="False" DataContext="{Binding CurrentArmyListViewModel}">
                <dxn:NavBarGroup IsExpanded="False" Header="HQ" ItemsSource="{Binding HqUnits}" ItemTemplate="{StaticResource AddUnitNavBarItemTemplate}"/>
                <dxn:NavBarGroup IsExpanded="False" Header="Troop" ItemsSource="{Binding TroopUnits}" ItemTemplate="{StaticResource AddUnitNavBarItemTemplate}"/>
                <dxn:NavBarGroup IsExpanded="False" Header="Elite" ItemsSource="{Binding EliteUnits}" ItemTemplate="{StaticResource AddUnitNavBarItemTemplate}"/>
                <dxn:NavBarGroup IsExpanded="False" Header="Fast Attack" ItemsSource="{Binding FastAttackUnits}" ItemTemplate="{StaticResource AddUnitNavBarItemTemplate}"/>
                <dxn:NavBarGroup IsExpanded="False" Header="Heavy Support" ItemsSource="{Binding HeavySupportUnits}" ItemTemplate="{StaticResource AddUnitNavBarItemTemplate}"/>
                <dxn:NavBarGroup IsExpanded="False" Header="Lord of War" ItemsSource="{Binding LordOfWarUnits}" ItemTemplate="{StaticResource AddUnitNavBarItemTemplate}"/>
            </dxn:NavBarControl>
        </Expander>


        <StackPanel x:Name="ProgressPanel" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" Grid.RowSpan="10" Grid.ColumnSpan="10">
            <controls:ProgressRing Width="50" Height="55" IsActive="True" />
            <TextBlock Text="Loading... Please Wait" />
        </StackPanel>
    </Grid>
</dx:DXWindow>