<dx:DXWindow xmlns:dxn="http://schemas.devexpress.com/winfx/2008/xaml/navbar" xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars" xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" x:Class="ArmyBuilder.Windows.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls" xmlns:views1="clr-namespace:ArmyBuilder.Windows.Views" xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" xmlns:models="clr-namespace:ArmyBuilder.Core.Models;assembly=ArmyBuilder.Core" WindowStartupLocation="CenterScreen" dx:ThemeManager.Theme="{dx:Theme Name=Office2010Black, AssemblyName=DevExpress.Xpf.Themes.Office2010Black.v14.2}" mc:Ignorable="d" DataContext="{StaticResource MainViewModel}" Title="ArmyBuilder" Height="800" Width="1200" Loaded="MainWindow_OnLoaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="50*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.RowSpan="4" ZIndex="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel>
                <Button Content="Lists" Width="50" Height="50">
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="ButtonBase.Click">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Duration="0:0:.5" To="150" From="0" Storyboard.TargetName="SideMenuGrid" Storyboard.TargetProperty="Width" />
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Button.Triggers>
                </Button>
            </StackPanel>

            <Grid Grid.Column="1" Width="150" x:Name="SideMenuGrid" HorizontalAlignment="Left">
                <Grid.Triggers>
                    <!--<EventTrigger RoutedEvent="Grid.LostFocus">
                        <BeginStoryboard>
                            --><!--<Storyboard >
                                <DoubleAnimation Duration="0:0:.5" To="0" From="300" Storyboard.TargetName="SideMenuGrid" Storyboard.TargetProperty="Width" />
                            </Storyboard>--><!--
                        </BeginStoryboard>
                    </EventTrigger>-->
                </Grid.Triggers>
                <Grid x:Name="ArmyListsGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <dxg:GridControl AutoGenerateColumns="None" ItemsSource="{Binding ArmyLists}" SelectedItem="{Binding SelectedArmyList, Mode=TwoWay}" SelectionMode="Row">
                        <dxg:GridControl.Columns>
                            <dxg:GridColumn FieldName="Name" />
                            <dxg:GridColumn FieldName="PointsLimit" />
                            <dxg:GridColumn Header="Army" Binding="{Binding RowData.Row.Army.Name}" />
                        </dxg:GridControl.Columns>
                        <dxg:GridControl.View>
                            <dxg:CardView CardLayout="Columns" AllowColumnMoving="False" AllowColumnFiltering="False" ShowColumnHeaders="False" AllowMoveColumnToDropArea="False" AllowGrouping="False" IsGroupFooterMenuEnabled="False" IsGroupPanelMenuEnabled="False" ShowGroupPanel="False">
                                <dxg:CardView.CardHeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Data.Name}" />
                                    </DataTemplate>
                                </dxg:CardView.CardHeaderTemplate>
                            </dxg:CardView>
                        </dxg:GridControl.View>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding EditSelectedListCommand}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </dxg:GridControl>
                    <views1:NewArmyListView Grid.Row="1" />
                </Grid>
            </Grid>
        </Grid>

        <StackPanel x:Name="HeaderPanel" Grid.Row="1" Grid.Column="1" Visibility="{Binding CurrentArmyListViewModel, TargetNullValue=Collapsed, FallbackValue=Visible}">
            <TextBlock FontSize="38" Text="{Binding CurrentArmyList.Name, FallbackValue=ListName, Mode=TwoWay}" Margin="10" />
            <StackPanel DataContext="{Binding CurrentArmyListViewModel}" Orientation="Horizontal">
                <TextBlock Text="{Binding PointsLeft, FallbackValue=500}" FontSize="18" Margin="10,0,0,10" Foreground="{StaticResource DimText}" />
                <TextBlock Text="of" FontSize="18" Margin="10,0,10,10" Foreground="{StaticResource DimText}" />
                <TextBlock Text="{Binding CurrentArmyList.PointsLimit, FallbackValue=1200}" FontSize="18" Margin="0,0,0,10" Foreground="{StaticResource DimText}" />
                <TextBlock Text="Points Left" FontSize="18" Margin="10,0,0,10" Foreground="{StaticResource DimText}" />
            </StackPanel>
        </StackPanel>

        <dxg:GridControl Visibility="{Binding CurrentArmyListViewModel,  FallbackValue=Visible}" x:Name="UnitListView" Grid.Row="1" Grid.Column="1" SelectedItem="{Binding SelectedUnit, Mode=TwoWay}" ItemsSource="{Binding Source={StaticResource ArmyListDataCollection}, Mode=OneWay}" SelectionMode="Row">
            <dxg:GridControl.Columns>
                <dxg:GridColumn FieldName="PointsTotal" />
                <dxg:GridColumn FieldName="Unit.Name" />
                <dxg:GridColumn FieldName="Column" />
            </dxg:GridControl.Columns>
            <dxg:GridControl.View>
                <dxg:TableView />
            </dxg:GridControl.View>
        </dxg:GridControl>

        <!--<ListView Visibility="{Binding CurrentArmyListViewModel, TargetNullValue=Collapsed, FallbackValue=Visible}" x:Name="UnitListView" Grid.Row="2" ItemTemplate="{StaticResource ArmyListDataTemplate}" SelectedItem="{Binding SelectedUnit, Mode=TwoWay}" ItemsSource="{Binding Source={StaticResource ArmyListDataCollection}, Mode=OneWay}" SelectionMode="Single" Grid.RowSpan="2"
                  Grid.Column="1" Margin="10,0,0,0">
            <ListView.GroupStyle>
                <GroupStyle HidesIfEmpty="True" HeaderTemplate="{StaticResource ArmyListDataGroupTemplate}"/>
            </ListView.GroupStyle>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>

        </ListView>-->

        <views1:UnitEditor x:Name="UnitEditor" Grid.Column="2" Grid.Row="1" Visibility="{Binding CurrentArmyListViewModel, Converter={StaticResource UnitEditorVisibilityConverter}, FallbackValue=Collapsed}" DataContext="{Binding SelectedUnit, Mode=OneWay}" Margin="5,10,10,0" />

        <Menu Grid.Row="0" Grid.Column="1">
            <MenuItem Header="Add Unit">
                <MenuItem x:Name="HqItemsMenu" Header="HQ" ItemsSource="{Binding HqUnits}" />
                <MenuItem x:Name="TroopItemsMenu" Header="Troop" ItemsSource="{Binding TroopUnits}" />
                <MenuItem x:Name="EliteItemsMenu" Header="Elite" ItemsSource="{Binding EliteUnits}" />
                <MenuItem x:Name="FastAttackItemsMenu" Header="Fast Attack" ItemsSource="{Binding FastAttackUnits}" />
                <MenuItem x:Name="HeavySupportItemsMenu" Header="Heavy Support" ItemsSource="{Binding HeavySupportUnits}" />
                <MenuItem x:Name="LordOfWarItemsMenu" Header="Lord of War" ItemsSource="{Binding LordOfWarUnits}" />
            </MenuItem>
            <MenuItem Header="Export">
                <MenuItem Header="As .txt" Command="{Binding ExportToTextFileCommand}" />
            </MenuItem>

            <MenuItem Header="Tools">
                <MenuItem x:Name="ManageArmyListButton" Header="Manage Army Lists" Command="{Binding CloseCommand}" />
            </MenuItem>
        </Menu>
        <dxb:ToolBarControl Grid.Row="0" Grid.Column="1">
            <dxb:BarButtonItem x:Name="NewUnitButton" Content="BarButtonItem" />
        </dxb:ToolBarControl>
        <dxn:NavBarControl AllowSelectItem="False" Grid.Row="0" Grid.Column="1" DataContext="{Binding CurrentArmyListViewModel}">
            <dxn:NavBarGroup IsExpanded="False" Header="HQ" ItemsSource="{Binding HqUnits}" ItemTemplate="{StaticResource AddUnitNavBarItemTemplate}"/>
            <dxn:NavBarGroup IsExpanded="False" Header="Troop" ItemsSource="{Binding TroopUnits}" ItemTemplate="{StaticResource AddUnitNavBarItemTemplate}"/>
            <dxn:NavBarGroup IsExpanded="False" Header="Elite" ItemsSource="{Binding EliteUnits}" ItemTemplate="{StaticResource AddUnitNavBarItemTemplate}"/>
            <dxn:NavBarGroup IsExpanded="False" Header="Fast Attack" ItemsSource="{Binding FastAttackUnits}" ItemTemplate="{StaticResource AddUnitNavBarItemTemplate}"/>
            <dxn:NavBarGroup IsExpanded="False" Header="Heavy Support" ItemsSource="{Binding HeavySupportUnits}" ItemTemplate="{StaticResource AddUnitNavBarItemTemplate}"/>
            <dxn:NavBarGroup IsExpanded="False" Header="Lord of War" ItemsSource="{Binding LordOfWarUnits}" ItemTemplate="{StaticResource AddUnitNavBarItemTemplate}"/>
        </dxn:NavBarControl>

        <!--<StackPanel x:Name="ProgressPanel" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" Grid.RowSpan="10" Grid.ColumnSpan="10">
            <controls:ProgressRing Width="50" Height="55" IsActive="True" />
            <TextBlock Text="Loading... Please Wait" />
        </StackPanel>-->
    </Grid>
</dx:DXWindow>